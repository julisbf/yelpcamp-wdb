<% include ./partials/header %>
  <div class="container forms">
    <form action="/register" method="post" enctype="multipart/form-data">
      <h1 class="text-left">Sign Up!</h1>
      <hr>
      <div class="form-row">
        <div class="form-group col-md-9">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="firstName">First Name</label>
              <input type="text" class="form-control" name="firstName" id="firstName" placeholder="Maria*" required>
            </div>
            <div class="form-group col-md-6">
              <label for="lastName">Last Name</label>
              <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Franco*" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="username">Username</label>
              <input type="text" class="form-control" name="username" id="username" placeholder="username*" required>
            </div>
            <div class="form-group col-md-6">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="password*" required>
            </div>
          </div>
          <div class="form-row">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="your@email.com*" required>
          </div>
          <hr>
          <div class="form-row">
              <label for="adminCode">Enter code if you are an admin</label>
              <input type="text" class="form-control" name="adminCode" id="adminCode" placeholder="Admin Code">
          </div>
          <div class="form-row">
              <button type="submit" class="btn btn-secondary mt-3 btn-sm">Submit</button>
          </div>
        </div>
        <div class="form-group col ml-4">
          <label for="avatar">Profile Image</label>
          <img class="d-block mb-2 bg-light rounded" src="/images/placeholder.svg" alt="Your Profile Image" width="170">
          <input type="file" id="avatar" name="avatar" accept="image/*" class="filestyle" data-input="false" data-text="Upload new picture">
        </div>
      </div>
    </form>
  </div>
<% include ./partials/footer %>