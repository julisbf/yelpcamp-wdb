<% include ../partials/header %>

<div class="container forms">
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post" enctype="multipart/form-data">
        <h2 class="text-left">Edit <%=campground.name %></h2>
        <hr>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="campName">Campground Name</label>
                <input type="text" class="form-control" name="campground[name]" id="campName" value="<%=campground.name%>" required>
            </div>
            <div class="form-group col-md-6">
                <label for="campPrice">Price per Night</label>
                <input type="number" class="form-control" name="campground[price]" id="campPrice" value="<%=campground.price%>" min="0" step="0.01" required>
            </div>
        </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>" required>
            </div>
             <div class="form-group">
                <label for="desc">Description</label>
                <textarea class="form-control" name="campground[description]" id="desc" rows="5"><%=campground.description%></textarea>
            </div>
            <div class="form-group">
                <label class="d-block" for="image">Choose a new image:</label>
                <img class="d-inline" src="<%=campground.image%>" alt="Current <%=campground.name%> Campground Image" width="150">
                <input type="file" id="image" name="image" accept="image/*">
                <input type="text" class="form-control" name="campground[image]" value="<%=campground.image%>" disabled>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-secondary btn-block">Edit Campground</button>
            </div>
        
    </form>
    <div><a href="/campgrounds"><< Go Back</a></div>
</div>
<% include ../partials/footer %>