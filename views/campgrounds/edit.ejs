<% include ../partials/header %>

  <div class="container forms">
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post" enctype="multipart/form-data">
      <h2 class="text-left">Edit <em>"<%=campground.name %>"</em></h2>
      <hr>
      <div class="form-row">
        <div class="form-group">
          <label class="d-block" for="image">Campground image</label>
          <img class="mb-2" src="<%=campground.image%>" alt="Current <%=campground.name%> Campground Image" width="170">
          <input type="file" id="image" name="image" accept="image/*" class="filestyle" data-input="false" data-text="Upload new picture">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="campName">Campground Name</label>
          <input type="text" class="form-control" name="campground[name]" id="campName" value="<%=campground.name%>" required>
        </div>
        <div class="form-group col-md-6">
          <label for="campPrice">Price per Night</label>
          <input type="number" class="form-control" name="campground[price]" id="campPrice" value="<%=campground.price%>" min="0" step="0.01" required>
        </div>
      </div>
      <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>" required>
      </div>
      <div class="form-group">
        <label for="desc">Description</label>
        <textarea class="form-control" name="campground[description]" id="desc" rows="5"><%=campground.description%></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-secondary btn-sm mr-2">Edit</button>
        <a class="btn btn-danger btn-sm" href="/campgrounds/<%= campground._id %>">Cancel</a>
      </div>
    </form>
  </div>
<% include ../partials/footer %>