<% include ../partials/header %>
  <div class="container forms">
    <form action="/campgrounds" method="post" enctype="multipart/form-data">
      <h3>Create a New Campground</h3>
      <hr>
      <div class="form-row">
        <div class="form-group">
          <label class="sr-only" for="imageURL">Campground image*</label>
          <img class="d-block mb-2 bg-light rounded" src="/images/placeholder.svg" alt="Campground Image" width="170">
          <input type="file" id="image" name="image" accept="image/*" class="filestyle" data-input="true" data-text="Upload picture" required>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="campName">Campground Name</label>
          <input type="text" class="form-control" name="campground[name]" id="campName" placeholder="Campground Name*" required>
        </div>
        <div class="form-group col-md-6">
          <label for="campPrice">Price per Night</label>
          <input type="number" class="form-control" name="campground[price]" id="campPrice" placeholder="Price per Night*" min="0" step="0.01" required>
        </div>
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Yosemite National Park, CA*" required>
      </div>
      <div class="form-group">
        <label for="desc">Description</label>
        <textarea class="form-control" name="campground[description]" id="desc" rows="5"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-secondary btn-sm mr-2">Create</button>
        <a class="btn btn-danger btn-sm" href="/campgrounds">Cancel</a>
      </div>
    </form>
  </div>
<% include ../partials/footer %>