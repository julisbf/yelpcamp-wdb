<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <h3>Edit Comment from <em>"<%= campground %>"</em></h3>
        <hr>
        <div class="mx-auto my-4">
          <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method="post">
            <div class="form-group">
              <label for="desc">Comment</label>
              <textarea class="form-control" name="comment[text]" id="desc" rows="3"><%=comment.text%></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-secondary btn-sm">Update</button>
              <a class="btn btn-danger btn-sm" href="/campgrounds/<%= campground_id %>">Cancel</a>
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
<% include ../partials/footer %>