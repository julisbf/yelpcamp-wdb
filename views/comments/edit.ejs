<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 class="text-center">Edit Comment</h1>
            <div class="mx-auto my-4">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method="post">
                     <div class="form-group">
                        <label for="desc">Comment</label>
                        <textarea class="form-control" name="comment[text]" id="desc" rows="5"><%=comment.text%></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary btn-block">Update Comment</button>
                    </div>
                </form>
                <div><a href="/campgrounds/<%= campground_id %>"><< Go Back</a></div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<% include ../partials/footer %>