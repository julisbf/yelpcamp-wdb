<% include ./partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1 class="text-center">Login</h1>
                <div class="mx-auto my-4">
                    <form action="/login" method="post">
                        <div class="form-group">
                            <!--<label for="campName">Enter Campground Name</label>-->
                            <input type="text" class="form-control" name="username" id="campName" placeholder="username">
                        </div>
                        <div class="form-group">
                            <!--<label for="imageURL">Enter Image URL</label>-->
                            <input type="password" class="form-control" name="password" id="password" placeholder="password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-secondary btn-block">Submit</button>
                        </div>
                    </form>
                    <a href="#" data-toggle="modal" data-target="#forgotForm">Forgot your password?</a>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

<!-- Modal Forgot Password -->
<div class="modal fade" id="forgotForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Reset Your Password</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body m-5">
        <p class="text-center">Please provide the email address you used when you signed up for your YelpCamp account.</p>
        <p class="text-center">We will send you an email with a link to reset your password.</p>
      </div>
      <div class="modal-footer">
         <form class="form-inline" action="/forgot" method="post">
            <div class="form-group mx-sm-3">
                <input type="email" class="form-control" name="email" placeholder="maria@franco.com">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-secondary btn-block">Reset Password</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
<% include ./partials/footer %>